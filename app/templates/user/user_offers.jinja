{% extends "base.jinja" %}

{% block style %}
<link rel="stylesheet" href="{{ url_for('static', filename='offer.css') }}">
{% endblock %}

{% block content %}
<main class>
    <section>
        <a href="/offer/add">Dodaj ogłoszenie</a>
    </section>
    <section>
        {% for offer in offers %}
            <div>
                <span>{{ offer.title }}</span>
                <a href="/offer/{{ offer.id }}">Strona ogłoszenia</a>
                <a href="/offer/{{ offer.id }}/edit">Edytuj</a>
                <a href="/offer/{{ offer.id }}/delete">Usuń</a>
            </div>
        {% endfor %}
    </section>
</main>
{% endblock %}