{% extends "user/user_profile.jinja" %}

{% block style %}
<link rel="stylesheet" href="{{ url_for('static', filename='user-profile.css') }}">
{% endblock %}

{% block main_content %}
<main class>
    <section>
        <a href="{{url_for('bp_main.offer_add')}}">Dodaj ogłoszenie</a>
    </section>
    <section>
        {% for offer in offers %}
            <div>
                <span>{{ offer.title }}</span>
                <br>
                <form class="form-singleton" action="{{url_for('bp_main.offer_get', offer_id=offer.id)}}", method="GET">
                    <input type="submit" value="Strona ogłoszenia" />
                </form>                
                <form class="form-singleton" action="{{url_for('bp_main.offer_edit', offer_id=offer.id)}}", method="GET">
                    <input type="submit" value="Edytuj" />
                </form>
                <form class="form-singleton" action="{{url_for('bp_main.offer_delete', offer_id=offer.id)}}", method="POST">
                    <input type="submit" value="Usuń" />
                </form>
            </div>
        {% endfor %}
    </section>
</main>
{% endblock %}