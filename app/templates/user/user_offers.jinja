{% extends "user/user_profile.jinja" %}

{% block style %}
<link rel="stylesheet" href="{{ url_for('static', filename='styles/user-profile.css') }}">
<link rel="stylesheet" href="{{ url_for('static', filename='styles/user-offers.css') }}">
{% endblock %}

{% block main_content %}
<main class>
    <form class="form-singleton" action="{{url_for('bp_offer.add')}}", method="GET">
        <input type="submit" value="Dodaj ogłoszenie" />
    </form>  
    <section>
        <h1 class="offers-wrapper">Moje ogłoszenia</h1>
        {% for offer in offers %}
            <div class="single-offer-wrapper">
                <div class="offer-title">{{ offer.title }}</div>
                <a href="{{ url_for('bp_main.offer_get', offer_id=offer.id) }}">Strona ogłoszenia</a>
                <a href="{{ url_for('bp_offer.edit', offer_id=offer.id) }}">Edytuj</a>
                <a href="{{ url_for('bp_offer.delete', offer_id=offer.id) }}">Usuń</a>
            </div>
        {% endfor %}
    </section>
</main>
{% endblock %}