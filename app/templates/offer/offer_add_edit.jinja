{% extends "base.jinja" %}
{% from "_macros.html" import render_field_with_errors, render_field_errors, render_field %}

{% block style %}
<link rel="stylesheet" href="{{ url_for('static', filename='offer.css') }}">
{% endblock %}

{% block content %}
<main class>
   <form action="{{ url_for('bp_main.offer_edit_api', offer_id=offer_id) if offer_id else url_for('bp_main.offer_add_api') }}" method="{{ 'PUT' if offer_id else 'POST' }}" name="add_edit_offer_form">
        <div class="container">
            <h1>{{ 'Edytuj' if offer_id else 'Dodaj' }} og≈Çoszenie</h1>
            <hr>
            {{ form.hidden_tag() }}
            {{ render_field_errors(form.csrf_token) }}
            {{ render_field_with_errors(form.title) }}
            {{ render_field_with_errors(form.description) }}
            {{ render_field_with_errors(form.price) }}
            <hr>
            {{ render_field(form.submit) }}
        </div>
    </form>
</main>
{% endblock %}